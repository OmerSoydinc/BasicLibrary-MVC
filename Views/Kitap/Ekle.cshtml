@model Kitap


<form method="post">

    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Kitap Ekle</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="KitapAdi" class="form-label"></label>
            <input asp-for="KitapAdi" class="form-control" placeholder="Kitap Türü Adı" />
            <span asp-validation-for="KitapAdi" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Tanim" class="form-label"></label>
            <input asp-for="Tanim" class="form-control" placeholder="Kitap Türü Adı" />
            <span asp-validation-for="Tanim" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Yazar" class="form-label"></label>
            <input asp-for="Yazar" class="form-control" placeholder="Kitap Adı" />
            <span asp-validation-for="Yazar" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Fiyat" class="form-label"></label>
            <input asp-for="Fiyat" class="form-control" placeholder="Kitap Adı" />
            <span asp-validation-for="Fiyat" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Kitap Türü Ekle</button>
        </div>

        <div class="mb-3">
            <a asp-controller="KitapTuru" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
                Kitap Türlerine Geri Dön
            </a>
        </div>

    </div>

</form>
